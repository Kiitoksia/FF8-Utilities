<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FF8Utilities.MAUI.Pages.CardManipulationSubPages.TimingPage"
             xmlns:pages="clr-namespace:FF8Utilities.MAUI.Pages.CardManipulationSubPages"
             x:DataType="pages:TimingPage"
             x:Name="this"
             BindingContext="{x:Reference this}"
             Title="Timing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <HorizontalStackLayout>
            <Entry Keyboard="Numeric" Placeholder="Enter cards for recovery or 1st try search" ClearButtonVisibility="WhileEditing" HorizontalOptions="Fill" x:Name="RecoveryEntry"/>
            <Button Text="Submit" HorizontalOptions="End"/>
        </HorizontalStackLayout>


        <Label x:Name="SnakeLabel" Grid.Row="1"/>
        <Button Text="Submit" Grid.Row="2" Clicked="Button_Clicked"/>
    </Grid>
</ContentPage>