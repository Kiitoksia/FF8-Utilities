<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FF8Utilities.MAUI.Pages.LateQuistisManipulationPage"
             xmlns:tabView="clr-namespace:Syncfusion.Maui.TabView;assembly=Syncfusion.Maui.TabView" 
             xmlns:cards="clr-namespace:FF8Utilities.Common.Cards;assembly=FF8Utilities.Common" 
             xmlns:controls="clr-namespace:FF8Utilities.MAUI.Controls"
             xmlns:navigationDrawer="clr-namespace:Syncfusion.Maui.NavigationDrawer;assembly=Syncfusion.Maui.NavigationDrawer"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit" 
             xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
             xmlns:popup="clr-namespace:Syncfusion.Maui.Popup;assembly=Syncfusion.Maui.Popup"
             xmlns:converters="clr-namespace:FF8Utilities.MAUI.Converters"
             x:DataType="cards:LateQuistisPattern"
             x:Name="this"
             Title="LateQuistisManipulationPage">
    <ContentPage.Resources>
        <converters:CachedByteArrayToImageSourceConverter x:Key="ImageConverter"/>

        <toolkit:MathExpressionConverter x:Key="MathExpressionConverter" />

        <Style TargetType="Label" BasedOn="{StaticResource BaseLabel}">
            <Setter Property="HorizontalTextAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="Large"/>
        </Style>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
            <RowDefinition Height="250"/>
            <RowDefinition Height="0"/> <!-- Container for popup-->
        </Grid.RowDefinitions>

        <popup:SfPopup x:Name="StrategyPopup" IsFullScreen="True" ShowHeader="False">
            <popup:SfPopup.PopupStyle>
                <popup:PopupStyle CornerRadius="0"/>
            </popup:SfPopup.PopupStyle>
            <popup:SfPopup.ContentTemplate>
                <DataTemplate>
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <buttons:SfButton Text="Hide" Clicked="SfButton_Clicked"/>
                        <Label Grid.Column="1" Text="{Binding SelectedStrategy.Frame, Mode=OneWay, Source={RelativeSource AncestorType={x:Type ContentPage}}, StringFormat='Frame {0}'}" HorizontalTextAlignment="Center" FontSize="Large"/>
                        <controls:CardPatternView BindingContext="{Binding SelectedStrategy.Positions, Source={RelativeSource AncestorType={x:Type ContentPage}}, Mode=OneWay}" Grid.Row="1" Grid.ColumnSpan="2"/>
                        <buttons:SfButton Grid.Row="2" Grid.ColumnSpan="2" Text="Submit" CornerRadius="0" Command="{Binding QuistisObtainedCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}" Margin="10,5" Background="{StaticResource StandardBlue}" />
                    </Grid>
                </DataTemplate>
            </popup:SfPopup.ContentTemplate>
        </popup:SfPopup>

        <Label Text="Frames" HorizontalTextAlignment="Center"/>
        <CollectionView ItemsSource="{Binding Strategies, Mode=OneTime}" SelectionMode="Single" SelectedItem="{Binding SelectedStrategy, Source={RelativeSource AncestorType={x:Type ContentPage}}}" Grid.Row="1" 
                        SelectionChanged="CollectionView_SelectionChanged" ItemSizingStrategy="MeasureAllItems" x:Name="StrategiesView" HorizontalOptions="Fill" VerticalOptions="Fill">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="5"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="cards:LateQuistisStrategy">
                    <Border Stroke="{StaticResource StandardBlue}" StrokeThickness="2" HeightRequest="{Binding Height, Source={x:Reference StrategiesView}, Converter={StaticResource MathExpressionConverter}, ConverterParameter='x/2'}">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup Name="CommonStates">
                                <VisualState Name="Normal">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="Transparent"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState Name="Selected">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="White"/>
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Image Source="{Binding OpponentCards[0], Converter={StaticResource ImageConverter}, Mode=OneTime}" VerticalOptions="Fill" HorizontalOptions="Fill" Aspect="AspectFit" />
                            <Image Source="{Binding OpponentCards[1], Converter={StaticResource ImageConverter}, Mode=OneTime}" VerticalOptions="Fill" HorizontalOptions="Fill" Aspect="AspectFit" Grid.Row="1" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <controls:CardTimerControl Grid.Row="2" x:Name="CardControl" Margin="10" Grid.ColumnSpan="2"/>
    </Grid>
</ContentPage>