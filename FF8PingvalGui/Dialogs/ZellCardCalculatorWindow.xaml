<mah:MetroWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FF8Utilities.Dialogs"
    xmlns:ff8PingvalGui="clr-namespace:FF8Utilities"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
        xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
        xmlns:models="clr-namespace:FF8Utilities.Models"
        xmlns:extensions="clr-namespace:FF8Utilities.Extensions"
        xmlns:ff8Utilities="clr-namespace:FF8Utilities"
        x:Class="FF8Utilities.Dialogs.ZellCardCalculatorWindow"
        GlowBrush="{DynamicResource AccentColorBrush}"
        mc:Ignorable="d"
        MinWidth="768"
        MinHeight="550"
        WindowStartupLocation="CenterOwner"
        ShowMaxRestoreButton="False"   
        Title="Zell Card RNG Calculator" Height="800" Width="768">
    <mah:MetroWindow.Resources>
        <Style BasedOn="{StaticResource {x:Type TextBlock}}"
               TargetType="{x:Type TextBlock}"
               x:Key="EncounterHeader">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="TextDecorations" Value="Underline"/>
            <Setter Property="Foreground" Value="CadetBlue"/>
        </Style>
    </mah:MetroWindow.Resources>
    <mah:MetroWindow.DataContext>
        <models:ZellCardTrackerModel/>
    </mah:MetroWindow.DataContext>
    <ScrollViewer>
        <StackPanel>
            <mah:MetroAnimatedSingleRowTabControl>
                <TabItem Header="Fish Fins">
                    <StackPanel>
                        <StackPanel>
                            <GroupBox Header="2x Bats" Margin="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.4*"/>
                                        <ColumnDefinition Width="0.6*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="Squall Attacks" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <mah:NumericUpDown Grid.Column="1" Grid.Row="0" Value="{Binding TwoBatsEncounter.SquallAttacks}" Minimum="0"/>
                                    <TextBlock Text="Fanfare Camera" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <Grid Grid.Row="1" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.9*"/>
                                            <ColumnDefinition Width="0.1*"/>
                                        </Grid.ColumnDefinitions>
                                        <ComboBox ItemsSource="{Binding Source={extensions:Enum ff8PingvalGui:TwoPersonFanfareCamera}}"
                                              DisplayMemberPath="Description" SelectedValuePath="Value"
                                              SelectedValue="{Binding TwoBatsEncounter.Camera}"
                                            />
                                        <Button IsTabStop="False" Grid.Column="1" Command="{Binding TwoBatsEncounter.ClearCameraCommand}">
                                            <StackPanel Orientation="Horizontal" Height="20">
                                                <fa:ImageAwesome Icon="Remove" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </StackPanel>
                                        </Button>
                                    </Grid>
                                </Grid>
                            </GroupBox>
                            <GroupBox Header="Ifrit" Margin="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.4*"/>
                                        <ColumnDefinition Width="0.6*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="Limits" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <mah:NumericUpDown Grid.Column="1" Grid.Row="0" Value="{Binding IfritEncounter.Limits}" Minimum="0"/>
                                    <TextBlock Text="Squall Attacks" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <mah:NumericUpDown Grid.Column="1" Grid.Row="1" Value="{Binding IfritEncounter.SquallAttacks}" Minimum="0"/>
                                    <TextBlock Text="Ifrit Punches" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <mah:NumericUpDown Grid.Column="1" Grid.Row="2" Value="{Binding IfritEncounter.IfritPunches}" Minimum="0"/>
                                </Grid>
                            </GroupBox>
                            <GroupBox Header="Buel" Margin="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.4*"/>
                                        <ColumnDefinition Width="0.6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Buel Physical" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <mah:NumericUpDown Grid.Column="1" Grid.Row="0" Value="{Binding BuelEncounter.BuelAttacks}" Minimum="0"/>
                                </Grid>
                            </GroupBox>
                        </StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.5*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Expander IsExpanded="True" Header="World Map Encounters">
                                <StackPanel>
                                    <DataGrid CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeColumns="False" CanUserSortColumns="False"
                                          CanUserReorderColumns="False" ItemsSource="{Binding WorldMapEncounters}" AutoGenerateColumns="False">
                                        <DataGrid.Columns>
                                            <DataGridComboBoxColumn ItemsSource="{Binding Source={extensions:Enum {x:Type ff8Utilities:WorldMapFormation}}}" 
                                                                DisplayMemberPath="Description"
                                                                SelectedValuePath="Value"
                                                                Header="Formation"
                                                                SelectedValueBinding="{Binding Formation}"
                                                                IsReadOnly="True"
                                                                Width="0.9*"/>
                                            <mah:DataGridNumericUpDownColumn Header="Quantity" Binding="{Binding Quantity}" Minimum="0"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </StackPanel>
                            </Expander>
                            <Expander Margin="5,0,0,0" IsExpanded="True" Header="Fish Fins" Grid.Column="1">
                                <StackPanel>
                                    <DataGrid Height="160" SelectedValue="{Binding FocusedFishFinEncounter}" IsReadOnly="True" AutoGenerateColumns="False" ItemsSource="{Binding FishFinEncounters}">
