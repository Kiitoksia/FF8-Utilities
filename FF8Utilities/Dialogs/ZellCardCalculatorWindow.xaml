<mah:MetroWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FF8Utilities.Dialogs"
    xmlns:ff8PingvalGui="clr-namespace:FF8Utilities"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
        xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
        xmlns:models="clr-namespace:FF8Utilities.Models"
        xmlns:encs="clr-namespace:FF8Utilities.Entities.Encounters"
        xmlns:extensions="clr-namespace:FF8Utilities.Extensions"
        xmlns:ff8Utilities="clr-namespace:FF8Utilities"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:converters="clr-namespace:FF8Utilities.Converters"        
    x:Class="FF8Utilities.Dialogs.ZellCardCalculatorWindow"
        GlowBrush="{DynamicResource AccentColorBrush}"
        mc:Ignorable="d"
        MinWidth="768"
        MinHeight="870"
        WindowStartupLocation="CenterOwner"
        ShowMaxRestoreButton="False"   
       x:Name="this"
        Title="Zell Card RNG Calculator" Height="870" Width="768">
    <mah:MetroWindow.Resources>
        <Style BasedOn="{StaticResource {x:Type TextBlock}}"
               TargetType="{x:Type TextBlock}"
               x:Key="EncounterHeader">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="TextDecorations" Value="Underline"/>
            <Setter Property="Foreground" Value="CadetBlue"/>
        </Style>
    </mah:MetroWindow.Resources>
    <mah:MetroWindow.DataContext>
        <models:ZellCardTrackerModel Window="{x:Reference this}"/>
    </mah:MetroWindow.DataContext>
    <ScrollViewer HorizontalScrollBarVisibility="Auto">
        <StackPanel>
            <mah:MetroAnimatedSingleRowTabControl SelectedIndex="{Binding FocusedTabIndex}">
                <TabItem Header="Fish Fins">
                    <StackPanel>
                        <StackPanel>
                            <GroupBox Header="2x Bats" Margin="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.4*"/>
                                        <ColumnDefinition Width="0.6*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="Squall Attacks" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <mah:NumericUpDown Grid.Column="1" Grid.Row="0" Value="{Binding TwoBatsEncounter.SquallAttacks}" Minimum="0"/>
                                    <TextBlock Text="Fanfare Camera" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <Grid Grid.Row="1" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.9*"/>
                                            <ColumnDefinition Width="0.1*"/>
                                        </Grid.ColumnDefinitions>
                                        <ComboBox ItemsSource="{Binding Source={extensions:Enum ff8PingvalGui:TwoPersonFanfareCamera}}"
                                              DisplayMemberPath="Description" SelectedValuePath="Value"
                                              SelectedValue="{Binding TwoBatsEncounter.Camera}"
                                            />
                                        <Button IsTabStop="False" Grid.Column="1" Command="{Binding TwoBatsEncounter.ClearCameraCommand}">
                                            <StackPanel Orientation="Horizontal" Height="20">
                                                <fa:ImageAwesome Icon="Remove" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" />
                                            </StackPanel>
                                        </Button>
                                    </Grid>
                                </Grid>
                            </GroupBox>
                            <GroupBox Header="Ifrit" Margin="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.4*"/>
                                        <ColumnDefinition Width="0.6*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="Limits" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <mah:NumericUpDown Grid.Column="1" Grid.Row="0" Value="{Binding IfritEncounter.Limits}" Minimum="0"/>
                                    <TextBlock Text="Squall Attacks" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <mah:NumericUpDown Grid.Column="1" Grid.Row="1" Value="{Binding IfritEncounter.SquallAttacks}" Minimum="0"/>
                                    <TextBlock Text="Ifrit Punches" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <mah:NumericUpDown Grid.Column="1" Grid.Row="2" Value="{Binding IfritEncounter.IfritPunches}" Minimum="0"/>
                                </Grid>
                            </GroupBox>
                            <DockPanel Margin="10">
                                <TextBlock Text="Post Ifrit Encounter" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,20,0"/>
                                <ComboBox ItemsSource="{Binding Source={extensions:Enum ff8PingvalGui:IfritEncounterType}}"
                                            DisplayMemberPath="Description" SelectedValuePath="Value"
                                            SelectedValue="{Binding IfritsCavernEncounterType}"
                                            DockPanel.Dock="Right"/>
                            </DockPanel>

                            <GroupBox Header="2x Bats" Margin="10" Visibility="{Binding BuelEncounterVisible, Converter={x:Static converters:KiiVisibilityConverter.TrueToCollapsed}}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.4*"/>
                                        <ColumnDefinition Width="0.6*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="Squall Attacks" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <mah:NumericUpDown Grid.Column="1" Grid.Row="0" Value="{Binding SecondBatsEncounter.SquallAttacks}" Minimum="0"/>
                                    <TextBlock Text="Fanfare Camera" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <Grid Grid.Row="1" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.9*"/>
                                            <ColumnDefinition Width="0.1*"/>
                                        </Grid.ColumnDefinitions>
                                        <ComboBox ItemsSource="{Binding Source={extensions:Enum ff8PingvalGui:TwoPersonFanfareCamera}}"
                                              DisplayMemberPath="Description" SelectedValuePath="Value"
                                              SelectedValue="{Binding SecondBatsEncounter.Camera}"
                                            />
                                        <Button IsTabStop="False" Grid.Column="1" Command="{Binding SecondBatsEncounter.ClearCameraCommand}">
                                            <StackPanel Orientation="Horizontal" Height="20">
                                                <fa:ImageAwesome Icon="Remove" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" />
                                            </StackPanel>
                                        </Button>
                                    </Grid>
                                </Grid>
                            </GroupBox>
                            <GroupBox Header="Buel" Margin="10" Visibility="{Binding BuelEncounterVisible, Converter={x:Static converters:KiiVisibilityConverter.FalseToCollapsed}}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.4*"/>
                                        <ColumnDefinition Width="0.6*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="Buel Attacks" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <mah:NumericUpDown Grid.Column="1" Grid.Row="0" Value="{Binding BuelEncounter.BuelAttacks}" Minimum="0"/>
                                    <TextBlock Grid.Row="1" Text="Squall Attacks" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <mah:NumericUpDown Grid.Column="1" Grid.Row="1" Value="{Binding BuelEncounter.SquallAttacks}" Minimum="0"/>
                                    <TextBlock Text="Fanfare Camera" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <Grid Grid.Row="2" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.9*"/>
                                            <ColumnDefinition Width="0.1*"/>
                                        </Grid.ColumnDefinitions>
                                        <ComboBox ItemsSource="{Binding Source={extensions:Enum ff8PingvalGui:TwoPersonFanfareCamera}}"
                                            DisplayMemberPath="Description" SelectedValuePath="Value"
                                            SelectedValue="{Binding BuelEncounter.Camera}"
                                        />
                                        <Button IsTabStop="False" Grid.Column="1" Command="{Binding BuelEncounter.ClearCameraCommand}">
                                            <StackPanel Orientation="Horizontal" Height="20">
                                                <fa:ImageAwesome Icon="Remove" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" />
                                            </StackPanel>
                                        </Button>
                                    </Grid>
                                </Grid>
                            </GroupBox>

                        </StackPanel>
                        <Grid Margin="10,10,10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.6*"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <GroupBox Header="World Map Encounters">
                                <StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="22"/>
                                            <RowDefinition Height="3"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Text="FORMATION" VerticalAlignment="Center"  FontWeight="SemiBold"/>
                                        <TextBlock Text="QUANTITY" Grid.Column="1" VerticalAlignment="Center" FontWeight="SemiBold"/>
                                        <Border Grid.ColumnSpan="2" Grid.Row="1" Background="LightGray"/>
                                    </Grid>
                                    <ItemsControl ItemsSource="{Binding WorldMapEncounters}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="encs:WorldMapEncounter">
                                                <DockPanel Margin="2">
                                                    <mah:NumericUpDown Minimum="0" Value="{Binding Quantity}" DockPanel.Dock="Right" Width="80" BorderBrush="Transparent" />
                                                    <TextBlock Text="{Binding FormationDisplay}" DockPanel.Dock="Left" VerticalAlignment="Center"/>
                                                </DockPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </GroupBox>
                            <GroupBox Margin="5,0,0,0" Header="Fish Fins" Grid.Column="1">
                                <StackPanel>
                                    <DataGrid Height="200" HorizontalContentAlignment="Stretch"  SelectedValue="{Binding FocusedFishFinEncounter}" IsReadOnly="True" AutoGenerateColumns="False" ItemsSource="{Binding FishFinEncounters}">
                                        <DataGrid.Columns>
                                            <DataGridComboBoxColumn ItemsSource="{Binding Source={extensions:Enum {x:Type ff8Utilities:TwoPersonFanfareCamera}}}"
                                                                DisplayMemberPath="Description"
                                                                SelectedValuePath="Value"
                                                                Header="Camera"
                                                                SelectedValueBinding="{Binding Camera}"
                                                                Width="255"
                                        />
                                            <DataGridTextColumn Binding="{Binding SquallPhysicals}" Header="Squall Physicals" Width="Auto"/>
                                            <DataGridTextColumn Binding="{Binding Limits}" Header="Limits" Width="Auto"/>
                                        </DataGrid.Columns>
                                        <DataGrid.RowStyle>
                                            <Style TargetType="DataGridRow">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SingleFishKilled}" Value="True">
                                                        <Setter Property="Background" Value="DarkSlateGray"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGrid.RowStyle>
                                    </DataGrid>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        <Button Style="{StaticResource MahApps.Styles.Button.Square.Accent}" IsTabStop="False" Command="{Binding AddNewEncounterCommand}">
                                            <StackPanel Orientation="Horizontal" Height="20">
                                                <fa:ImageAwesome Icon="PlusCircle" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                <TextBlock Text="Add Regular Encounter" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>
                                        <Button Grid.Column="1" Style="{StaticResource MahApps.Styles.Button.Square}" IsTabStop="False" Command="{Binding AddNewHalfEncounterCommand}" Background="DarkSlateGray">
                                            <TextBlock Text="Add Single Fish" VerticalAlignment="Center" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center" />
                                        </Button>
                                    </Grid>
                                </StackPanel>
                            </GroupBox>
                        </Grid>
                    </StackPanel>
                </TabItem>
                <TabItem Header="Dollet">
                    <StackPanel>
                        <GroupBox Header="2x Soldier" Margin="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.4*"/>
                                    <ColumnDefinition Width="0.6*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Squall Attacks" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <mah:NumericUpDown Grid.Column="1" Grid.Row="0" Value="{Binding FirstDolletEncounter.SquallAttacks}" Minimum="0"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Seifer Attacks" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <mah:NumericUpDown Grid.Column="1" Grid.Row="1" Value="{Binding FirstDolletEncounter.SeiferAttacks}" Minimum="0"/>
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Zell Attacks" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <mah:NumericUpDown Grid.Column="1" Grid.Row="2" Value="{Binding FirstDolletEncounter.ZellAttacks}" Minimum="0"/>
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Soldier Attacks" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <mah:NumericUpDown Grid.Column="1" Grid.Row="3" Value="{Binding FirstDolletEncounter.SoldierAttacks}" Minimum="0"/>
 
                            </Grid>
                        </GroupBox>
                        <GroupBox Header="2x Soldier" Margin="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.4*"/>
                                    <ColumnDefinition Width="0.6*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Squall Attacks" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <mah:NumericUpDown Grid.Column="1" Grid.Row="0" Value="{Binding SecondDolletEncounter.SquallAttacks}" Minimum="0"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Seifer Attacks" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <mah:NumericUpDown Grid.Column="1" Grid.Row="1" Value="{Binding SecondDolletEncounter.SeiferAttacks}" Minimum="0"/>
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Zell Attacks" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <mah:NumericUpDown Grid.Column="1" Grid.Row="2" Value="{Binding SecondDolletEncounter.ZellAttacks}" Minimum="0"/>
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Soldier Attacks" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <mah:NumericUpDown Grid.Column="1" Grid.Row="3" Value="{Binding SecondDolletEncounter.SoldierAttacks}" Minimum="0"/>
                            </Grid>
                        </GroupBox>
                        <GroupBox Header="Soldier" Margin="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.4*"/>
                                    <ColumnDefinition Width="0.6*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Squall Attacks" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <mah:NumericUpDown Grid.Column="1" Grid.Row="0" Value="{Binding ThirdDolletEncounter.SquallAttacks}" Minimum="0"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Seifer Attacks" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <mah:NumericUpDown Grid.Column="1" Grid.Row="1" Value="{Binding ThirdDolletEncounter.SeiferAttacks}" Minimum="0"/>
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Zell Attacks" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <mah:NumericUpDown Grid.Column="1" Grid.Row="2" Value="{Binding ThirdDolletEncounter.ZellAttacks}" Minimum="0"/>
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Soldier Attacks" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <mah:NumericUpDown Grid.Column="1" Grid.Row="3" Value="{Binding ThirdDolletEncounter.SoldierAttacks}" Minimum="0"/>
                            </Grid>
                        </GroupBox>
                        <GroupBox Header="Soldier" Margin="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.4*"/>
                                    <ColumnDefinition Width="0.6*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Squall Attacks" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <mah:NumericUpDown Grid.Column="1" Grid.Row="0" Value="{Binding FourthDolletEncounter.SquallAttacks}" Minimum="0"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Seifer Attacks" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <mah:NumericUpDown Grid.Column="1" Grid.Row="1" Value="{Binding FourthDolletEncounter.SeiferAttacks}" Minimum="0"/>
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Zell Attacks" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <mah:NumericUpDown Grid.Column="1" Grid.Row="2" Value="{Binding FourthDolletEncounter.ZellAttacks}" Minimum="0"/>
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Soldier Attacks" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <mah:NumericUpDown Grid.Column="1" Grid.Row="3" Value="{Binding FourthDolletEncounter.SoldierAttacks}" Minimum="0"/>
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Camera" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <ComboBox Grid.Row="4" Grid.Column="1" ItemsSource="{Binding Source={extensions:Enum ff8PingvalGui:ThreePersonFanfareCamera}}"
                                  DisplayMemberPath="Description" SelectedValuePath="Value"
                                  SelectedValue="{Binding FourthDolletEncounter.Camera}"/>
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </TabItem>
                <TabItem Header="Anacondaur">
                    <StackPanel>
                        <GroupBox Header="Soldier" Margin="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.4*"/>
                                    <ColumnDefinition Width="0.6*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Squall Attacks" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <mah:NumericUpDown Grid.Column="1" Grid.Row="0" Value="{Binding BridgeEncounter.SquallAttacks}" Minimum="0"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Seifer Attacks" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <mah:NumericUpDown Grid.Column="1" Grid.Row="1" Value="{Binding BridgeEncounter.SeiferAttacks}" Minimum="0"/>
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Zell Attacks" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <mah:NumericUpDown Grid.Column="1" Grid.Row="2" Value="{Binding BridgeEncounter.ZellAttacks}" Minimum="0"/>
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Soldier Attacks" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <mah:NumericUpDown Grid.Column="1" Grid.Row="3" Value="{Binding BridgeEncounter.SoldierAttacks}" Minimum="0"/>
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Camera" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <Grid Grid.Row="4" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.9*"/>
                                        <ColumnDefinition Width="0.1*"/>
                                    </Grid.ColumnDefinitions>
                                    <ComboBox ItemsSource="{Binding Source={extensions:Enum ff8PingvalGui:ThreePersonFanfareCamera}}"
                                          DisplayMemberPath="Description" SelectedValuePath="Value"
                                          SelectedValue="{Binding BridgeEncounter.Camera}"/>
                                    <Button IsTabStop="False" Grid.Column="1" Command="{Binding BridgeEncounter.ClearCameraCommand}">
                                        <StackPanel Orientation="Horizontal" Height="20">
                                            <fa:ImageAwesome Icon="Remove" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" />
                                        </StackPanel>
                                    </Button>
                                </Grid>
                            </Grid>
                        </GroupBox>

                        <DockPanel Margin="10">
                            <TextBlock Text="2nd Bridge Encounter" Margin="0,0,10,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <mah:ToggleSwitch IsOn="{Binding DidGetSecondBridgeEncounter}" OnContent="Yes" OffContent="No"/>
                        </DockPanel>

                        <GroupBox Header="3x Soldier" Margin="10" Visibility="{Binding DidGetSecondBridgeEncounter, Converter={x:Static converters:KiiVisibilityConverter.FalseToCollapsed}}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.4*"/>
                                    <ColumnDefinition Width="0.6*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Squall Attacks" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <mah:NumericUpDown Grid.Column="1" Grid.Row="0" Value="{Binding SecondBridgeEncounter.SquallAttacks}" Minimum="0"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Seifer Attacks" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <mah:NumericUpDown Grid.Column="1" Grid.Row="1" Value="{Binding SecondBridgeEncounter.SeiferAttacks}" Minimum="0"/>
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Zell Attacks" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <mah:NumericUpDown Grid.Column="1" Grid.Row="2" Value="{Binding SecondBridgeEncounter.ZellAttacks}" Minimum="0"/>
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Soldier Attacks" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <mah:NumericUpDown Grid.Column="1" Grid.Row="3" Value="{Binding SecondBridgeEncounter.SoldierAttacks}" Minimum="0"/>
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Camera" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <Grid Grid.Row="4" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.9*"/>
                                        <ColumnDefinition Width="0.1*"/>
                                    </Grid.ColumnDefinitions>
                                    <ComboBox ItemsSource="{Binding Source={extensions:Enum ff8PingvalGui:ThreePersonFanfareCamera}}"
                                        DisplayMemberPath="Description" SelectedValuePath="Value"
                                        SelectedValue="{Binding SecondBridgeEncounter.Camera}"/>
                                    <Button IsTabStop="False" Grid.Column="1" Command="{Binding SecondBridgeEncounter.ClearCameraCommand}">
                                        <StackPanel Orientation="Horizontal" Height="20">
                                            <fa:ImageAwesome Icon="Remove" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" />
                                        </StackPanel>
                                    </Button>
                                </Grid>
                            </Grid>
                        </GroupBox>

                        <GroupBox Header="Anacondaur" Margin="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.4*"/>
                                    <ColumnDefinition Width="0.6*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Squall Attacks" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <mah:NumericUpDown Grid.Column="1" Grid.Row="0" Value="{Binding AnacondaurEncounter.SquallPhysicals}" Minimum="0"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Seifer Attacks" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <mah:NumericUpDown Grid.Column="1" Grid.Row="1" Value="{Binding AnacondaurEncounter.SeiferAttacks}" Minimum="0"/>
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Zell Attacks" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <mah:NumericUpDown Grid.Column="1" Grid.Row="2" Value="{Binding AnacondaurEncounter.ZellAttacks}" Minimum="0"/>
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Limits" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <mah:NumericUpDown Grid.Column="1" Grid.Row="3" Value="{Binding AnacondaurEncounter.Limits}" Minimum="0"/>
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Squeeze" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <mah:NumericUpDown Grid.Column="1" Grid.Row="4" Value="{Binding AnacondaurEncounter.Rolls}" Minimum="0"/>
                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Dark Mists" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <mah:NumericUpDown Grid.Column="1" Grid.Row="5" Value="{Binding AnacondaurEncounter.Blind}" Minimum="0"/>
                                <TextBlock Grid.Row="6" Grid.Column="0" Text="All chars alive on defeat?" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <mah:ToggleSwitch Grid.Column="1" Grid.Row="6" IsOn="{Binding AnacondaurEncounter.AllCharactersSurvived}" OnContent="Yes" OffContent="No"/>
                                <TextBlock Grid.Row="7" Grid.Column="0" Text="Camera" VerticalAlignment="Center" HorizontalAlignment="Center"/>
