<UserControl x:Class="FF8Utilities.Controls.CarawayOptionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c="clr-namespace:CarawayCode.Entities;assembly=CarawayCode"
             xmlns:local="clr-namespace:FF8Utilities.Controls"
             mc:Ignorable="d" 
             Margin="5"
             d:DataContext="{d:DesignInstance c:CarawayOption}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>


        <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2" HorizontalAlignment="Center">
            <TextBlock Text="{Binding Code}" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding Input}" Margin="20,0,0,0" FontSize="16" VerticalAlignment="Center"/>
        </StackPanel>


        <TextBlock Text="NPC Details" Grid.Row="2" Grid.ColumnSpan="2" FontWeight="Bold"/>
        
        <TextBlock Text="Station" Grid.Row="3"/>
        <TextBlock Text="{Binding Station}" Grid.Row="3" Grid.Column="1"/>

        <TextBlock Text="Escalator" Grid.Row="4"/>
        <TextBlock Text="{Binding Escalator}" Grid.Row="4" Grid.Column="1"/>

        <TextBlock Text="Street" Grid.Row="5"/>
        <TextBlock Text="{Binding Street}" Grid.Row="5" Grid.Column="1"/>

        <TextBlock Text="Bus" Grid.Row="6"/>
        <TextBlock Text="{Binding Bus}" Grid.Row="6" Grid.Column="1"/>
    </Grid>
</UserControl>
