<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FF8Utilities.MAUI.Pages.LateQuistisManipulationPage"
             xmlns:tabView="clr-namespace:Syncfusion.Maui.TabView;assembly=Syncfusion.Maui.TabView" 
             xmlns:cards="clr-namespace:FF8Utilities.Common.Cards;assembly=FF8Utilities.Common" 
             xmlns:controls="clr-namespace:FF8Utilities.MAUI.Controls"
             xmlns:navigationDrawer="clr-namespace:Syncfusion.Maui.NavigationDrawer;assembly=Syncfusion.Maui.NavigationDrawer"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit" 
             xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
             x:DataType="cards:LateQuistisPattern"
             x:Name="this"
             Title="LateQuistisManipulationPage">
    <ContentPage.Resources>
        <toolkit:ByteArrayToImageSourceConverter x:Key="ImageConverter"/>
    </ContentPage.Resources>

    <navigationDrawer:SfNavigationDrawer Grid.RowSpan="2" x:Name="NavigationDrawer">
        <navigationDrawer:SfNavigationDrawer.DrawerSettings>
            <navigationDrawer:DrawerSettings IsOpen="True" DrawerWidth="100">
                <navigationDrawer:DrawerSettings.DrawerContentView>
                    <CollectionView ItemsSource="{Binding Strategies}" SelectionMode="Single" SelectionChanged="CollectionView_SelectionChanged" SelectedItem="{Binding SelectedStrategy, Source={RelativeSource AncestorType={x:Type ContentPage}}}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="cards:LateQuistisStrategy">
                                <Grid HeightRequest="60">
                                    <HorizontalStackLayout>
                                        <Image Source="{Binding OpponentCards[0], Converter={StaticResource ImageConverter}}" HeightRequest="60" Aspect="AspectFit" />
                                        <Image Source="{Binding OpponentCards[1], Converter={StaticResource ImageConverter}}" HeightRequest="60" Aspect="AspectFit" />
                                    </HorizontalStackLayout>
                                    <Label Text="{Binding Frame, StringFormat='Frame {0}'}"  VerticalTextAlignment="End" BackgroundColor="#7F000000"
                                           VerticalOptions="End" HorizontalOptions="Start"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </navigationDrawer:DrawerSettings.DrawerContentView>
            </navigationDrawer:DrawerSettings>
        </navigationDrawer:SfNavigationDrawer.DrawerSettings>
        <navigationDrawer:SfNavigationDrawer.ContentView>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="250"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <buttons:SfButton Clicked="Button_Clicked" Text="CHANGE FRAME"/>
                <Label Text="{Binding SelectedStrategy.Frame, Source={RelativeSource AncestorType={x:Type ContentPage}}, StringFormat='Frame {0}'}" 
                       HorizontalTextAlignment="Center" FontSize="Large" Grid.Column="1"/>

                <controls:CardPatternView BindingContext="{Binding SelectedStrategy.Positions, Source={RelativeSource AncestorType={x:Type ContentPage}}}" 
                                          Grid.Row="1" Grid.ColumnSpan="2" HorizontalOptions="Fill" VerticalOptions="Fill" />

                <buttons:SfButton Text="Quistis Obtained" Grid.Row="2" Grid.ColumnSpan="2" CornerRadius="0" Command="{Binding QuistisObtainedCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}" 
                                  Margin="10,5" />

                <controls:CardTimerControl Grid.Row="3" Grid.ColumnSpan="2" x:Name="CardControl" Margin="10"/>
            </Grid>
        </navigationDrawer:SfNavigationDrawer.ContentView>
    </navigationDrawer:SfNavigationDrawer>
</ContentPage>