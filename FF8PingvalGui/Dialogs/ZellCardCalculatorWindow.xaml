                                            <fa:ImageAwesome Icon="PlusCircle" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            <TextBlock Text="Add Encounter" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>

                            </Expander>
                        </Grid>
                    </StackPanel>
