                                            <DataGridComboBoxColumn ItemsSource="{Binding Source={extensions:Enum {x:Type ff8Utilities:TwoPersonFanfareCamera}}}"
                                                                DisplayMemberPath="Description"
                                                                SelectedValuePath="Value"
                                                                Header="Camera"
                                                                SelectedValueBinding="{Binding Camera}"
                                                                Width="0.6*"
                                        />
                                            <DataGridTextColumn Binding="{Binding SquallPhysicals}" Header="Squall Physicals"/>
                                            <DataGridTextColumn Binding="{Binding Limits}" Header="Limits"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                    <Button Style="{StaticResource AccentedSquareButtonStyle}" IsTabStop="False" Height="50" Command="{Binding AddNewEncounterCommand}">
